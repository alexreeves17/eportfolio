---
interface Props {
  skill: string;
  isActive?: boolean;
  onClick?: boolean;
}

const { skill, isActive = false, onClick = true } = Astro.props;
---

<button
  class:list={[
    'px-4 py-2 rounded-full transition-all duration-300',
    onClick && 'cursor-pointer hover:scale-105',
    isActive 
      ? 'bg-blue-600 text-white shadow-lg' 
      : 'bg-gray-100 hover:bg-gray-200'
  ]}
  data-skill={skill}
>
  {skill}
</button>